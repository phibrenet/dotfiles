Include config_dynamic
Include config_personal
Include config_local

# General
Host *
    Compression yes
    ServerAliveInterval 15
    UpdateHostKeys yes

    # Don't hash known hosts, it doesn't really add much security since
    # most hosts are also listed in this file and/or Bash history
    HashKnownHosts no

Host localhost
    ForwardAgent yes
    ForwardX11 yes
    # ForwardX11Trusted is required in Cygwin
    ForwardX11Trusted yes

# Phibre
Host *.phibre.net *.phibre.local
    ForwardAgent yes

Host a aria aria.phibre.net
    Hostname aria.phibre.net
    User phibre
    ForwardAgent yes

# Clients

