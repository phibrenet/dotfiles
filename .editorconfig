# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Web files
[*.{html,css,scss,sass,less}]
indent_size = 2

# JavaScript and TypeScript
[*.{js,jsx,ts,tsx,vue}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Rust files
[*.rs]
indent_size = 4

# C/C++ files
[*.{c,cpp,h,hpp}]
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab

# Docker files
[Dockerfile*]
indent_size = 4

# Configuration files
[*.{ini,cfg,conf,toml}]
indent_size = 4